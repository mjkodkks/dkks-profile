                    <a href="https://www.linkedin.com/in/thanonphat-supho" target="_blank">
                        <div class="w-12 h-12 text-2xl grid place-content-center" style="line-height: 1;">
                            CV
                        </div>
                    </a>
                    <!-- <Button>Contact Me</Button> -->
                    <!-- <Button>Checkout My Work</Button> -->
                </div>
            </div>
        </div>
        <div class="flex justify-center items-center order-1 md:order-2">
            <ProfileImage imgSrc="https://dkks-profile.s3.ap-southeast-1.amazonaws.com/thanonphat-2-compress.jpg" client:visible></ProfileImage>
        </div>
    </div>
</section>

<style>
#bg-2 {
    --primary: rgba(255, 255, 255, 0.25);
    background-image: radial-gradient(
        circle,
        var(--primary),
        var(--primary) 1.5px,
        transparent 1.5px,
        transparent
    );
    background-size: 2.5rem 2.5rem;
    background-repeat: repeat;
}
</style>