---
import Button from "@components/Button.astro";
import ProfileImage from "./ProfileImage";

---

<section id="home" class="h-[100dvh] md:h-[calc(100dvh_-_120px)]  relative">
    <div class="absolute z-0 w-full h-full bg-gradient-to-l from-gray-700 via-gray-900 to-black"></div>
    <div id="bg-2" class="absolute z-1 w-full h-full from-gray-700 via-gray-900 to-black"></div>
    <div class="absolute left-0 right-0 z-2 max-w-screen-lg mx-auto grid grid-cols-1 md:grid-cols-2 h-full">
        <div class="flex justify-center md:justify-start md:items-center order-2 md:order-1">
            <div class="text-white">
                <h1 class="text-3xl text-center md:text-left">Hi, I'm <span class="text-primary">Thanonphat</span></h1>
                <h2 class="text-3xl text-center md:text-start mt-4 md:text-5xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-indigo-400"> I Design and Develop </h2>
                <h2 class="text-4xl md:text-6xl text-center md:text-left">Web Application</h2>
                <h3 class="text-xl md:text-base text-center md:text-left mt-4">
                    I'm a front end developer with 4+ years, Familiar to modern front-end framework like react, vue, angular and svelte. I love a cat and tech stuff.
                </h3>
                <div class="flex gap-4 mt-8 items-center justify-center">
                    <a href="https://github.com/mjkodkks" target="_blank">
